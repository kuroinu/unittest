<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/grid_background"
        android:columnCount="5"
        android:paddingLeft="5dip"
        android:paddingRight="5dip">

        <!-- row0 -->

        <Button
            android:id="@+id/key_timer_action"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@drawable/btn_background"
            android:text="START" />

        <TextView
            android:id="@+id/textView2"
            android:layout_column="1"
            android:layout_row="0"
            android:gravity="left"
            android:padding="5dip"
            android:scrollHorizontally="true"
            android:text="0/26"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Chronometer
            android:id="@+id/chronometer1"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:gravity="right"
            android:text="Chronometer"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <!-- row1 -->

        <TextView
            android:id="@+id/textView1"
            android:layout_column="0"
            android:layout_columnSpan="5"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1"
            android:background="@drawable/disp_background"
            android:ellipsize="end"
            android:gravity="left"
            android:padding="5dip"
            android:scrollHorizontally="true"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <!-- row2 -->

        <Button
            android:id="@+id/key_1"
            android:layout_column="0"
            android:layout_row="2"
            android:background="@drawable/btn_background"
            android:text="A" />

        <Button
            android:id="@+id/key_2"
            android:layout_column="1"
            android:layout_row="2"
            android:background="@drawable/btn_background"
            android:text="B" />

        <Button
            android:id="@+id/key_3"
            android:layout_column="2"
            android:layout_row="2"
            android:background="@drawable/btn_background"
            android:text="C" />

        <Button
            android:id="@+id/key_4"
            android:layout_column="4"
            android:layout_row="2"
            android:background="@drawable/btn_background"
            android:text="D" />

        <!-- row3 -->

        <Button
            android:id="@+id/key_5"
            android:layout_column="0"
            android:layout_row="3"
            android:background="@drawable/btn_background"
            android:text="E" />

        <Button
            android:id="@+id/key_6"
            android:layout_column="1"
            android:layout_row="3"
            android:background="@drawable/btn_background"
            android:text="F" />

        <Button
            android:id="@+id/key_7"
            android:layout_column="2"
            android:layout_row="3"
            android:background="@drawable/btn_background"
            android:text="G" />

        <Button
            android:id="@+id/key_8"
            android:layout_column="4"
            android:layout_row="3"
            android:background="@drawable/btn_background"
            android:text="H" />

        <!-- row4 -->

        <Button
            android:id="@+id/key_9"
            android:layout_column="0"
            android:layout_row="4"
            android:background="@drawable/btn_background"
            android:text="I" />

        <Button
            android:id="@+id/key_10"
            android:layout_column="1"
            android:layout_row="4"
            android:background="@drawable/btn_background"
            android:text="J" />

        <Button
            android:id="@+id/key_11"
            android:layout_column="2"
            android:layout_row="4"
            android:background="@drawable/btn_background"
            android:text="K" />

        <Button
            android:id="@+id/key_12"
            android:layout_column="4"
            android:layout_row="4"
            android:background="@drawable/btn_background"
            android:text="L" />

        <!-- row5 -->

        <Button
            android:id="@+id/key_13"
            android:layout_column="0"
            android:layout_row="5"
            android:background="@drawable/btn_background"
            android:text="M" />

        <Button
            android:id="@+id/key_14"
            android:layout_column="1"
            android:layout_row="5"
            android:background="@drawable/btn_background"
            android:text="N" />

        <Button
            android:id="@+id/key_15"
            android:layout_column="2"
            android:layout_row="5"
            android:background="@drawable/btn_background"
            android:text="O" />

        <Button
            android:id="@+id/key_16"
            android:layout_column="4"
            android:layout_row="5"
            android:background="@drawable/btn_background"
            android:text="P" />

        <!-- row6 -->

        <Button
            android:id="@+id/key_17"
            android:layout_column="0"
            android:layout_row="6"
            android:background="@drawable/btn_background"
            android:text="Q" />

        <Button
            android:id="@+id/key_18"
            android:layout_column="1"
            android:layout_row="6"
            android:background="@drawable/btn_background"
            android:text="R" />

        <Button
            android:id="@+id/key_19"
            android:layout_column="2"
            android:layout_row="6"
            android:background="@drawable/btn_background"
            android:text="S" />

        <Button
            android:id="@+id/key_20"
            android:layout_column="4"
            android:layout_row="6"
            android:background="@drawable/btn_background"
            android:text="T" />

        <!-- row7 -->

        <Button
            android:id="@+id/key_21"
            android:layout_column="0"
            android:layout_row="7"
            android:background="@drawable/btn_background"
            android:text="U" />

        <Button
            android:id="@+id/key_22"
            android:layout_column="1"
            android:layout_row="7"
            android:background="@drawable/btn_background"
            android:text="V" />

        <Button
            android:id="@+id/key_23"
            android:layout_column="2"
            android:layout_row="7"
            android:background="@drawable/btn_background"
            android:text="W" />

        <Button
            android:id="@+id/key_24"
            android:layout_column="4"
            android:layout_row="7"
            android:background="@drawable/btn_background"
            android:text="X" />

        <!-- row8 -->

        <Button
            android:id="@+id/key_25"
            android:layout_column="0"
            android:layout_row="8"
            android:background="@drawable/btn_background"
            android:text="Y" />

        <Button
            android:id="@+id/key_26"
            android:layout_column="1"
            android:layout_row="8"
            android:background="@drawable/btn_background"
            android:text="Z" />
    </GridLayout>

</RelativeLayout>