package com.practice.scientificcaluculator;

import java.util.HashMap;
import java.util.Map;

import android.annotation.SuppressLint;
import android.view.View;
import ex.practice.calc.calucurator.Calcurator;

@SuppressLint("UseSparseArrays")
final class OperatorClickEvent implements IClickEvent {

	/**
	 * 演算子キーのIDマッパー
	 */
	private static final Map<Integer, Calcurator.OPERATOR> OPERATOR_KEYS;
	static {
		OPERATOR_KEYS = new HashMap<Integer, Calcurator.OPERATOR>();
		OPERATOR_KEYS.put(R.id.key_plus, Calcurator.OPERATOR.ADD);
		OPERATOR_KEYS.put(R.id.key_minus, Calcurator.OPERATOR.SUBTRACT);
		OPERATOR_KEYS.put(R.id.key_multi, Calcurator.OPERATOR.MULTI);
		OPERATOR_KEYS.put(R.id.key_divide, Calcurator.OPERATOR.DIVIDE);
		OPERATOR_KEYS.put(R.id.key_mod, Calcurator.OPERATOR.MOD);
		OPERATOR_KEYS.put(R.id.key_power, Calcurator.OPERATOR.POW);
	}

	@Override
	public void registClickEvent(final MainActivity activity) {
		// 演算子キー設定
		for (final Map.Entry<Integer, Calcurator.OPERATOR> e : OPERATOR_KEYS
				.entrySet()) {
			activity.findViewById(e.getKey()).setOnClickListener(
					new View.OnClickListener() {
						public void onClick(View v) {
							if (activity.calcView
									.isLastCharOfCalcViewAreaNumber(activity.inputData
											.get())) {
								String operator = activity.inputData.blacketCnt > 0 ? e
										.getValue().getBrancketVal() : e
										.getValue().getValue();
								activity.calcView.write(activity.inputData.set(
										operator).get());
							}
						}
					});
		}
	}

}
